<Window x:Class="NewTech.MaterialCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор материала" Height="450" Width="500"
        Background="White"
        FontFamily="Bahnschrift Light SemiCondensed"
        WindowStartupLocation="CenterScreen"
        Icon="resources/icon.ico">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Расчёт необходимого материала" FontSize="22" FontWeight="Bold" Foreground="#0C4882" Margin="0 0 0 12"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0 0 0 12">
            <StackPanel Orientation="Horizontal" Margin="0 4">
                <TextBlock Text="Тип продукции:" Width="140" VerticalAlignment="Center"/>
                <ComboBox x:Name="ProductTypeCombo" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 4">
                <TextBlock Text="Тип материала:" Width="140" VerticalAlignment="Center"/>
                <ComboBox x:Name="MaterialTypeCombo" Width="200" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 4">
                <TextBlock Text="Требуемое количество:" Width="140" VerticalAlignment="Center"/>
                <TextBox x:Name="RequiredQuantityBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 4">
                <TextBlock Text="Количество на складе:" Width="140" VerticalAlignment="Center"/>
                <TextBox x:Name="StockQuantityBox" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 4">
                <TextBlock Text="Параметр 1:" Width="140" VerticalAlignment="Center"/>
                <TextBox x:Name="Param1Box" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 4">
                <TextBlock Text="Параметр 2:" Width="140" VerticalAlignment="Center"/>
                <TextBox x:Name="Param2Box" Width="200"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 12 0 0">
            <Button Content="Рассчитать" Width="120" Height="34" Background="#0C4882" Foreground="White" FontWeight="SemiBold" Click="CalculateBtn_Click"/>
            <Button x:Name="BackButton" Content="Назад" Width="120" Height="34" Background="#0C4882" Foreground="White" Margin="10,0,0,0" FontWeight="SemiBold" Click="BackButton_Click"/>
            <TextBlock x:Name="ResultText" Margin="12 0 0 0" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#0C4882"/>
        </StackPanel>
    </Grid>
</Window>
