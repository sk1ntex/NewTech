<Window x:Class="NewTech.PartnerProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продукция" Height="600" Width="800"
        Background="White"
        FontFamily="Bahnschrift Light SemiCondensed"
        WindowStartupLocation="CenterScreen"
        Icon="resources/icon.ico">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок + кнопки -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка возврата -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0 0 0 10">
            <TextBlock Text="Продукция" FontSize="24" FontWeight="Bold" Foreground="#0C4882" VerticalAlignment="Center" DockPanel.Dock="Left"/>

            <Button Content="Назад" Width="100" Height="34" Margin="10 0 0 0"
                    Background="#0C4882" Foreground="White" FontWeight="SemiBold"
                    Click="BackButton_Click" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Таблица продукции -->
        <DataGrid x:Name="ProductsGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                  HeadersVisibility="Column" Background="#BBDCFA" RowBackground="White" AlternatingRowBackground="#F0F8FF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Количество на складе" Binding="{Binding StockQuantity}" Width="150"/>
                <DataGridTextColumn Header="Минимальная стоимость" Binding="{Binding MinPartnerCost}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
