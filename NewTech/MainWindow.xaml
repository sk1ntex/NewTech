<Window x:Class="NewTech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewTech — Просмотр заявок"
        Height="700" Width="1000"
        Icon="resources/icon.ico"
        FontFamily="Bahnschrift Light SemiCondensed"
        Background="White">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с логотипом -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Image Source="resources/logo.png"
                   Height="60"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Margin="14 0 10 0"/>
            <TextBlock Text="Просмотр заявок"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="#0C4882"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="14 0 0 10" HorizontalAlignment="Left">
            <Button x:Name="AddRequestButton" Content="Добавить заявку" Width="140" Height="34" Click="AddRequestButton_Click"
                    Background="#0C4882" Foreground="White" Margin="0,0,10,0" FontWeight="SemiBold"/>
            <Button x:Name="PartnerProductButton" Content="Продукция" Width="140" Height="34"
                    Background="#0C4882" Foreground="White" Margin="0,0,10,0" FontWeight="SemiBold" Click="PartnerProductButton_Click"/>
            <Button x:Name="CalculatorButton" Content="Калькулятор" Width="140" Height="34"
                    Background="#0C4882" Foreground="White" Margin="0,0,10,0" FontWeight="SemiBold" Click="CalculatorButton_Click"/>
        </StackPanel>

        <!-- Список карточек -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="CardsList" Margin="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <!-- Карточка -->
                        <Border 
                            Background="#BBDCFA"
                            Padding="12"
                            Margin="0 0 0 12"
                            Width="920"
                            BorderBrush="#0C4882"
                            BorderThickness="1">
                            <Grid MouseLeftButtonDown="Card_MouseLeftButtonDown" Cursor="Hand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>

                                <!-- Левая часть -->
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="18" FontWeight="Bold" Foreground="#0C4882" Text="{Binding TitleText}"/>
                                    <TextBlock FontSize="14" Margin="0 6 0 0" Text="{Binding Address}"/>
                                    <TextBlock FontSize="14" Margin="0 4 0 0" Text="{Binding Phone}"/>
                                    <TextBlock FontSize="14" Margin="0 4 0 0" Text="{Binding RatingText}"/>
                                </StackPanel>

                                <!-- Правая часть (стоимость) -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock Text="Стоимость" FontSize="14" FontWeight="Bold" Foreground="#0C4882" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding CostText}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>

</Window>
